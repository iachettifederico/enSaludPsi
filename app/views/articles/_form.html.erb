<div class="contentBody">
	<%= semantic_form_for(@article) do |f| %>
		<%= f.inputs do %>
			<%= f.input :title, :label => "Título" %>
			<%= f.input :contents, :as => :text, :label => "Contenido" %>
			<%= f.input :users, :label => "Autores" %>
			<%= f.input :categories, :label => "Categorías" %>
		<% end %>
		<%= f.buttons %>
	<% end %>
</div>
